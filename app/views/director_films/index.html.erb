<%= link_to "Director Index", "/directors" %>
<%= link_to "Films Index", "/films" %>
<%= link_to "Add Film", "/directors/#{@director.id}/films/new"  %>

<% @films.each do |film| %>
  <h3>Title: <%= film.title %></h3>
  <p>Oscar nominated? <%= film.oscar_nominated %></p>
  <p>Oscar wins: <%= film.oscar_wins %></p>
  <p>Budget: <%= film.budget %></p>
  <p>Revenue: <%= film.revenue %></p>
  <p>Release Date: <%= film.release_date %></p>
<% end %>
