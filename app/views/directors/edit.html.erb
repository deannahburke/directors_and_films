<%= form_with url: "/directors/#{@director.id}", method: :patch, local: true do |form| %>

  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :birthdate %>
  <%= form.text_field :birthdate %>
  <%= form.label :hometown %>
  <%= form.text_field :hometown %>
  <%= form.label :active? %>
  <%= form.select :active?, ["True", "False"] %>
  <%= form.label :imdb_rating %>
  <%= form.number_field :imdb_rating %>
  <%= form.submit "Update Director" %>
<% end %>
