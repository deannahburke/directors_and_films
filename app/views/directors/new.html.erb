<%= form_with url: '/directors', method: :post, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :birthdate %>
  <%= form.text_field :birthdate %>
  <%= form.label :hometown %>
  <%= form.text_field :hometown %>
  <%= form.label :active? %>
  <%= form.text_field :active? %>
  <%= form.label :imdb_rating %>
  <%= form.number_field :imdb_rating %>
  <%= form.submit "Create Director" %>
<% end %>
